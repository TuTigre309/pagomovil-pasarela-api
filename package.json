{
  "name": "login-server",
  "version": "1.0.0",
  "description": "This is a reusable login micro-service that works with passport.js, express and mongoDb",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "cross-env IS_DEV=false babel --out-dir build",
    "dev": "nodemon ./index.js --exec babel-node",
    "start": "node build/index.js"
  },
  "keywords": [
    "login",
    "passport.js",
    "express",
    "mongoDb"
  ],
  "author": "Andres De Leon Barroso Cifuentes",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "https": "^1.0.0",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.0",
    "morgan": "^1.10.0",
    "serverless-http": "^3.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.7",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.8",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.3"
  }
}
